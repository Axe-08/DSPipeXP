# Application Settings
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-here
ALLOWED_ORIGINS=http://localhost:3000

# Server Settings
HOST=0.0.0.0
PORT=8000

# Database Settings
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/dspipexp
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=dspipexp

# Redis Settings
REDIS_URL=redis://localhost:6379

# Storage Settings
AUDIO_STORAGE_PATH=/app/data/audio
CACHE_STORAGE_PATH=/app/data/cache

# External Services
GENIUS_ACCESS_TOKEN=your-genius-token-here

# Feature Settings
AUDIO_QUALITY=192  # Audio quality in kbps (64/96/128/192/256/320)
MAX_AUDIO_SIZE=20  # Maximum audio file size in MB
CACHE_TTL=3600    # Cache time-to-live in seconds

# Recommendation Settings
MIN_SIMILARITY_SCORE=0.5
MAX_RECOMMENDATIONS=10 