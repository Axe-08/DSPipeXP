# TEMPLATE: Copy this file to dspipexp_streamlit/.streamlit/secrets.toml and fill in your actual values
# This template contains all the necessary configuration for the DSPipeXP application

# Database Configuration
[postgres]
host = "your-postgres-host.example.com"
port = 5432
database = "yourdbname"
user = "yourdbuser"
password = "yourdbpass"

# API Keys
[api_keys]
genius_access_token = "your_genius_access_token"
lastfm_api_key = "your_lastfm_api_key"
lastfm_shared_secret = "your_lastfm_shared_secret"

# Configuration
[app]
enable_youtube_search = true
enable_file_upload = true
cache_dir = "./cache"
max_recommendations = 20
min_similarity_threshold = 0.15 